<?xml version="1.0" encoding="UTF-8"?>
<layout>
	<didyouknow_index_random>
		<label>Random Quote | Did you know</label>
		<!-- Mage_Customer -->
		<remove name="right"/>
		<remove name="left"/>
		<reference name="head">
			<action method="addCss">
				<name>css/didyouknow.css</name>
			</action>
			<action method="addJs"><script>jquery-1.8.3.min.js</script></action>
		</reference>
		<reference name="root">
			<action method="setTemplate"><template>page/empty.phtml</template></action>
		</reference>
		<reference name="content">
			<block type="didyouknow/random" name="didyouknow.random" template="eezy/didyouknow/random.phtml" />
		</reference>
	</didyouknow_index_random>
</layout>