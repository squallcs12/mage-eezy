<?xml version="1.0" encoding="UTF-8"?>
<layout>
	<default>
		<reference name="head">
			<action method="addJs">
				<script>lib/swfobject.js</script>
			</action>
		</reference>
	</default>
	<note_article_index>
		<reference name="root">
			<action method="setTemplate">
				<template>page/2columns-right.phtml</template>
			</action>
		</reference>
		<reference name="right">
			<block type="didyouknow/random" template="didyouknow/random.phtml"></block>
			<block type="page/html" name="tags_cloud" template="note/tag/cloud.phtml" />
			<block type="note/article_hot" name="article_hot" template="note/article/hot.phtml" />
		</reference>
		<remove name="left"/>
		<reference name="content">
			<block type="note/article_grid" name="article_grid" template="note/article/grid.phtml">
				<action method="setItemTemplate">
					<template>note/article/grid/item.phtml</template>
				</action>
				<action method="setIsAbleGetMore">
					<bool>0</bool>
				</action>
				<action method="addOrder">
					<field>order_number</field>
					<direction>desc</direction>
				</action>
			</block>
		</reference>
	</note_article_index>
	<note_article_view>
		<reference name="root">
			<action method="setTemplate">
				<template>page/2columns-right.phtml</template>
			</action>
		</reference>
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>css/article.css</name>
				<params/>
				<if></if>
			</action>
		</reference>
		<reference name="right">
			<block type="didyouknow/random" template="didyouknow/random.phtml"></block>
			<block type="page/html" name="tags_cloud" template="note/tag/cloud.phtml" />
			<block type="note/article_hot" name="article_hot" template="note/article/hot.phtml" />
		</reference>
		<reference name="content">
			<block type="note/article_view" name="article_view" template="note/article/view.phtml">
				<block type="note/article_view_tags" name="article_tags" template="note/article/view/tags.phtml"></block>
				<block type="core/template" name="facebook_like">
					<action method="setTemplate" ifconfig="facebooklb/article_likebutton/enabled">
						<template>facebooklb/like.phtml</template>
					</action>
					<action method="setGroup">
						<group>article_likebutton</group>
					</action>
				</block>
				<block type="googleplusone/default" name="googleplusone_default" after="-" />
			</block>
			<block name="facebook_comment" type="core/template">
				<action method="setTemplate">
					<template>facebooklb/comment.phtml</template>
				</action>
				<action method="setGroup">
					<group>article_comment</group>
				</action>
			</block>
		</reference>
	</note_article_view>
</layout>
