<?xml version="1.0" encoding="UTF-8"?>
<layout>
	<note_article_index>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
		<reference name="content">
			<block type="note/article_grid" name="article_grid" template="eezy/note/article/grid.phtml">
				<action method="setItemTemplate">
					<template>eezy/note/article/grid/item.phtml</template>
				</action>
				<action method="setIsAbleGetMore">
					<bool>1</bool>
				</action>
				<action method="addOrder">
					<field>order_number</field>
					<direction>desc</direction>
				</action>
				<block type="note/article_grid_item" name="hot_items" template="eezy/note/article/grid/item.phtml">
					<action method="setArticleById">
						<id>1</id>
					</action>		
				</block>
			</block>
		</reference>
	</note_article_index>
	<note_article_view>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
		<reference name="right">
			<block type="cms/block" name="Promo">
			    <action method="setBlockId"><block_id>note-tag-cloud</block_id></action>
			</block> 
			<block type="note/article_hot" name="article_hot" template="eezy/note/article/hot.phtml" />
		</reference>
		<reference name="content">
			<block type="note/article_view" name="article_view" template="eezy/note/article/view.phtml">
				<block type="note/article_view_tags" name="article_tags" template="eezy/note/article/view/tags.phtml"></block>
			</block>
		</reference>
	</note_article_view>
</layout>
