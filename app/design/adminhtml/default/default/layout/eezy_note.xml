	<adminhtml_article_grid>
		<block type="core/text_list" name="root" output="toHtml">
			<block type="note/adminhtml_article_grid" name="article_grid"/>
		</block>
	</adminhtml_article_grid>
	<adminhtml_article_tag>
		<block type="core/text_list" name="root" output="toHtml">
			<block type="note/adminhtml_article_edit_tag" name="article_edit_tag"/>
			<block type="adminhtml/widget_grid_serializer" name="article_edit_tag_serializer">
                <reference name="article_edit_tag_serializer">
                    <action method="initSerializerBlock">
                        <grid_block_name>article_edit_tag</grid_block_name>
                        <data_callback>getSelectedTags</data_callback>
                        <hidden_input_name>tags</hidden_input_name>
                        <reload_param_name>article_edit_tag</reload_param_name>
                    </action>
                </reference>
            </block>
		</block>
	</adminhtml_article_tag>
	<adminhtml_article_tagajax>
		<block type="core/text_list" name="root" output="toHtml">
			<block type="note/adminhtml_article_edit_tag" name="article_edit_tag"/>
		</block>
	</adminhtml_article_tagajax>
	
	<adminhtml_tag_cloud_index>
