<config>
    <modules>
        <Yireo_GooglePlusOne>
            <version>1.0.6</version>
        </Yireo_GooglePlusOne>
    </modules>

    <global>
        <blocks>
            <googleplusone>
                <class>Yireo_GooglePlusOne_Block</class>
            </googleplusone>
        </blocks>
        <helpers>
            <googleplusone>
                <class>Yireo_GooglePlusOne_Helper</class>
            </googleplusone>
        </helpers>
        <models>
            <googleplusone>
                <class>Yireo_GooglePlusOne_Model</class>
            </googleplusone>
        </models>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <googleplusone_observer>
                        <type>singleton</type>
                        <class>Yireo_GooglePlusOne_Model_Observer</class>
                        <method>coreBlockAbstractToHtmlAfter</method>
                    </googleplusone_observer>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </global>

    <frontend>
        <layout>
            <updates>
                <googleplusone>
                    <file>googleplusone.xml</file>
                </googleplusone>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <googleplusone translate="title" module="googleplusone">
                                            <title>GooglePlusOne</title>
                                        </googleplusone>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
